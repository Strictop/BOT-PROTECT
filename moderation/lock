const Discord = require("discord.js");
const db = require("quick.db");
const owner = new db.table("Owner");
const cl = new db.table("Color");
const ml = new db.table("modlog");
const p3 = new db.table("Perm3");
const config = require("../config");

module.exports = {
    name: "lock",
    usage: "lock",
    description: `Permet de verrouiller un salon ou tous les salons.`,
    async execute(client, message, args) {
        // VÃ©rification de l'autorisation
        const isAuthorized =
            owner.get(`owners.${message.author.id}`) ||
            config.app.owners.includes(message.author.id) ||
            config.app.funny.includes(message.author.id) ||
            message.member.roles.cache.has(p3.fetch(`perm3_${message.guild.id}`));

        if (!isAuthorized) {
            return message.channel.send(
                "âŒ Vous n'avez pas les permissions nÃ©cessaires pour utiliser cette commande."
            );
        }

        // RÃ©cupÃ©ration de la couleur pour l'embed
        let color = cl.fetch(`color_${message.guild.id}`) || config.app.color;

        // Si l'argument "all" est donnÃ©, verrouiller tous les salons
        if (args[0] === "all") {
            try {
                message.guild.channels.cache.forEach((channel) => {
                    channel.permissionOverwrites.edit(
                        message.guild.roles.everyone, // Role @everyone
                        { SEND_MESSAGES: false },
                        `Tous les salons verrouillÃ©s par ${message.author.tag}`
                    );
                });

                message.channel.send(`ğŸ”’ Tous les salons ont Ã©tÃ© verrouillÃ©s avec succÃ¨s.`);

                // Logs
                const logChannelId = ml.get(`${message.guild.id}.modlog`);
                if (logChannelId) {
                    const logChannel = client.channels.cache.get(logChannelId);
                    if (logChannel) {
                        const logEmbed = new Discord.MessageEmbed()
                            .setDescription(
                                `ğŸ”’ | **${message.author.tag}** a verrouillÃ© tous les salons du serveur.`
                            )
                            .setColor(color)
                            .setTimestamp()
                            .setFooter({ text: "ğŸ“š ModÃ©ration" });
                        logChannel.send({ embeds: [logEmbed] });
                    }
                }
            } catch (error) {
                console.error("Erreur lors du verrouillage de tous les salons :", error);
                message.channel.send(
                    "âŒ Une erreur s'est produite lors du verrouillage des salons."
                );
            }
            return;
        }

        // Verrouiller un seul salon (mentionnÃ© ou actuel)
        const targetChannel =
            message.mentions.channels.first() || message.guild.channels.cache.get(args[0]) || message.channel;

        try {
            await targetChannel.permissionOverwrites.edit(
                message.guild.roles.everyone, // Role @everyone
                { SEND_MESSAGES: false },
                `Salon verrouillÃ© par ${message.author.tag}`
            );

            // Message de confirmation
            message.channel.send(`ğŸ”’ Le salon <#${targetChannel.id}> est dÃ©sormais verrouillÃ©.`);

            // Logs
            const logChannelId = ml.get(`${message.guild.id}.modlog`);
            if (logChannelId) {
                const logChannel = client.channels.cache.get(logChannelId);
                if (logChannel) {
                    const logEmbed = new Discord.MessageEmbed()
                        .setDescription(
                            `ğŸ”’ | **${message.author.tag}** a verrouillÃ© le salon <#${targetChannel.id}>.`
                        )
                        .setColor(color)
                        .setTimestamp()
                        .setFooter({ text: "ğŸ“š ModÃ©ration" });
                    logChannel.send({ embeds: [logEmbed] });
                }
            }
        } catch (error) {
            console.error("Erreur lors du verrouillage du salon :", error);
            message.channel.send(
                `âŒ Une erreur s'est produite lors du verrouillage du salon <#${targetChannel.id}>.`
            );
        }
    },
};
